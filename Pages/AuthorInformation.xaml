<Page x:Class="ListViewTestAndTeach.Pages.AuthorInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ListViewTestAndTeach.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorInformation">

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Id}" Padding="0 5" Margin="2 3 2 0"></TextBlock>
            <TextBox Text="{Binding LastName}" Padding="0 5" Margin="2 3 2 0"></TextBox>
            <TextBox Text="{Binding FirstName}" Padding="0 5" Margin="2 3 2 0"></TextBox>
            <TextBox Text="{Binding SurName}" Padding="0 5" Margin="2 3 2 0"></TextBox>
            <Button x:Name="BtSave" Content="Сохранить" Click="BtSave_Click"/>
        </StackPanel>
        

    </Grid>
</Page>
